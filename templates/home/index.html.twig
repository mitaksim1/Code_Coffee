{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Code'N'Coffee</h1>
		{% if app.user is null %}
			<ul>
				<li>
					<a href="{{ path('app_login') }}" title="Connexion">Connexion</a>
				</li>
			</ul>
		{% else %}
			<h2>
				Bienvenue
				{{ app.user.firstname }}</h2>
			<ul>
				<li><a href="{{ path('app_logout') }}" title="Déconnexion">Déconnexion</a></li>
			</ul>
		{%  endif %}
	</div>
{% endblock %}
